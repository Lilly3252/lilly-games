{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"#database/*": ["src/database/*"],
			"#events/*": ["src/events/*"],
			"#json/*": ["src/structures/JSONs/*"],
			"#constants/*": ["src/structures/constants/*"],
			"#type/*": ["src/structures/types/*"],
			"#structures/*": ["src/structures/*"]
		},
		// Completeness
		"skipLibCheck": true,
		
	},
	"include": ["src"]
}
